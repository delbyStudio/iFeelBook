<?xml version="1.0" encoding="UTF-8"?>

<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.ifeelbook.www"
        version   = "0.2">

    <name>iFeelBook</name>

    <description>Emotional Quotes</description>

    <author email="dlbdvd96@hotmail.it">Davide del Buono</author>

    <preference name='phonegap-version' value="cli-5.1.1"/>
    <preference name="orientation" value="portrait" />  
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />     
    <preference name="android-minSdkVersion" value="14" />       
    <preference name="android-targetSdkVersion" value="19" />

    <gap:plugin name="cordova-plugin-whitelist" source="npm" />
    <gap:plugin name="nl.x-services.plugins.socialsharing" source="plugins.cordova.io" />
    <gap:plugin name="nl.x-services.plugins.toast" source="plugins.cordova.io" />
    
    <access origin="*" />

</widget>